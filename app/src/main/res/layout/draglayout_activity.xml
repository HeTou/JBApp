<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/bar_bg"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">
    <include layout="@layout/activity_title"></include>
    <com.programmer.jbapp.common.widget.draglayout.DragLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"></RelativeLayout>

        <com.programmer.jbapp.common.widget.draglayout.MyRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <WebView
                android:id="@+id/webview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </com.programmer.jbapp.common.widget.draglayout.MyRelativeLayout>
    </com.programmer.jbapp.common.widget.draglayout.DragLayout>
</LinearLayout>